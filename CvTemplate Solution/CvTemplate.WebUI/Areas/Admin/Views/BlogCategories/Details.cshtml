@model BlogCategory

@{
    ViewData["Title"] = "Details";
}


<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">Blog Category <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>Name</th>
                    <td>@Model?.Name</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>


