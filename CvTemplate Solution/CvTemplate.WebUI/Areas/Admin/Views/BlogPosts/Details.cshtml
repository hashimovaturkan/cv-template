@model BlogPost

@{
    ViewData["Title"] = "Details";
}


<div class="content-body">
    <!-- row -->
    <div class="container-fluid">
        <div class="table-wrapper">
            <div class="table-title">
                <div class="row">
                    <div class="col-sm-12">
                        <h2 class="text-center">AcademicBacGround <b>Details</b></h2>
                    </div>
                </div>
            </div>
        </div>
        <table class="table table-striped table-hover">

            <tbody>
                <tr>
                    <th>Image</th>
                    <td>
                        <img src="~/uploads/images/@Model.ImgUrl" width="120" height="100" />
                    </td>
                </tr>
                <tr>
                    <th>Title</th>
                    <td>@Model?.Title</td>
                </tr>
                <tr>
                    <th>Content</th>
                    <td>@Model.Content?.PlainText()</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>@Model?.Description</td>
                </tr>
                <tr>
                    <th>BlogCategoryId</th>
                    <td>@Model?.BlogCategoryId</td>
                </tr>
                <tr>
                    <th>PublishedDate</th>
                    <td>@Model?.PublishedDate</td>
                </tr>
            </tbody>
        </table>
        <div>
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="edit"><i class="fa fa-edit" data-toggle="tooltip" title="Edit"></i></a>
            |
            <a asp-action="Index">Back to List</a>
        </div>
    </div>
</div>





