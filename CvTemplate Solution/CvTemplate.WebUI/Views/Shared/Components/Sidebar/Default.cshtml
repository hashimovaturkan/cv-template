@model SidebarViewModel
@{
    ViewData["Title"] = "Default";
}

<div class="col-md-4">
    <div class="side-bar">

        <!-- Professional Details -->
        <h5 class="tittle">Professional Details</h5>
        <img src="/uploads/images/avatar.jpg" class="img-responsive" alt="">
        <ul class="personal-info">
            <li>
                <p> <span> Name</span> @Model.PersonalSetting?.Name </p>
            </li>
            <li>
                <p> <span> Age</span> @Model.PersonalSetting?.Age </p>
            </li>
            <li>
                <p> <span> Location</span> @Model.PersonalSetting?.Location </p>
            </li>
            <li>
                <p> <span> Experience</span> @Model.PersonalSetting?.Experience </p>
            </li>
            <li>
                <p> <span> Degree</span> @Model.PersonalSetting?.Degree </p>
            </li>
            <li>
                <p> <span> Career Level</span> @Model.PersonalSetting?.CareerLevel </p>
            </li>
            <li>
                <p> <span> Phone</span> @Model.PersonalSetting?.Phone </p>
            </li>
            <li>
                <p> <span> FAX</span> @Model.PersonalSetting?.Fax </p>
            </li>
            <li>
                <p> <span> E-mail</span> <a href="@Model.PersonalSetting?.Email"> @Model.PersonalSetting?.Email</a> </p>
            </li>
            <li>
                <p> <span> Website</span><a href="@Model.PersonalSetting?.Website"> @Model.PersonalSetting?.Website</a></p>
            </li>
        </ul>

        <!-- Attachments -->
        <h5 class="tittle mt-5">Attachments</h5>
        <div class="attach bor-btm padding-25">
            <ul>
                @foreach (var item in Model.Attachments)
                {
                    <li>
                        <p><img src="/uploads/images/@item?.IconUrl" alt=""> @item?.Name <a download href="~/uploads/files/@item?.AttachmentUrl"><i class="fa fa-cloud-download"></i></a> <a href="@item.AttachmentUrl"><i class="fa fa-eye"></i></a></p>
                    </li>
                }
                @*<li>
                        <p><img src="/uploads/images/word-icon.jpg" alt=""> COE.docx <a href="#."><i class="fa fa-cloud-download"></i></a> <a href="#."><i class="fa fa-eye"></i></a></p>
                    </li>*@
            </ul>
        </div>

        <!-- Social Profiles -->
        <h5 class="tittle">Social Profiles</h5>
        <div class="social-icon bor-btm padding-25">
            <ul>
                @foreach (var item in Model.SocialProfiles)
                {
                    <li> <a href="@item?.IconUrl"> <i class="fa fa-@item?.Name"></i></a> </li>
                }
                @*<li> <a href="#."> <i class="fa fa-google"></i></a> </li>
                    <li> <a href="#."> <i class="fa fa-twitter"></i></a> </li>
                    <li> <a href="#."> <i class="fa fa-linkedin"></i></a> </li>
                    <li> <a href="#."> <i class="fa fa-skype"></i></a> </li>*@
            </ul>
        </div>

        <!-- Contact Me -->
        <h5 class="tittle">Contact Me</h5>
        <div class="contact padding-25">
            <!-- Success Msg -->
            @*<div id="contact_message" class="success-msg"> <i class="fa fa-paper-plane-o"></i>Thank You. Your Message has been Submitted</div>*@

            <!-- FORM -->
            <form  id="contactfrm" class="contact-form" method="post" >
                <ul class="row">
                    <li class="col-sm-12">
                        <label>
                            <input type="text" class="form-control" name="email" id="email" placeholder="@ContactResource.Email">
                        </label>
                    </li>
                    <li class="col-sm-12">
                        <label>
                            <input type="text" class="form-control" name="company" id="company" placeholder="@ContactResource.Name">
                        </label>
                    </li>
                    <li class="col-sm-12">
                        <label>
                            <textarea class="form-control" name="message" id="message" rows="5" placeholder="@ContactResource.Content"></textarea>
                        </label>
                    </li>
                    <li class="col-sm-12">
                        <button type="submit" >@ContactResource.SendMessage</button>
                    </li>
                </ul>
            </form>
        </div>
    </div>
</div>

